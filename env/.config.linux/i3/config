set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

set $fm "eDP-1-1"
set $sm "HDMI-0"
set $external "DP-1-1"

# Check if eDP-1-1 is connected
exec --no-startup-id xrandr --listactivemonitors | grep -q $fm && set $fm_connected true || set $fm_connected false
# Check if HDMI-0 is connected
exec --no-startup-id xrandr --listactivemonitors | grep -q $sm && set $sm_connected true || set $sm_connected false

# Configure workspaces based on connections
# If eDP-1-1 is connected, use it for the first group of workspaces, else fallback to HDMI-0
workspace $ws1 output $sm_connected == true ? $sm : $fm
workspace $ws2 output $sm_connected == true ? $sm : $fm
workspace $ws3 output $sm_connected == true ? $sm : $fm
workspace $ws4 output $sm_connected == true ? $sm : $fm
workspace $ws5 output $sm_connected == true ? $sm : $fm
workspace $ws6 output $fm
workspace $ws7 output $fm
workspace $ws8 output $fm
workspace $ws9 output $fm
workspace $ws10 output $fm


# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5 
bindsym $mod+6 workspace number $ws6
